@{
    ViewData["Title"] = "Dojo Survey";
}

@model FormData
<div class="main">
    <form asp-action="Create" asp-controller="Home" method="post">
        <div class="form-group">
            <span asp-validation-for="Name"></span>
            <label asp-for="Name"></label>
            <input asp-for"Name">
        </div>
        <div class="form-group">
            <span asp-validation-for="Location"></span>
            <label asp-for="Location"></label>
            <select asp-for="Location">
                <option>Seattle</option>
                <option>Austin</option>
                <option>Boise</option>
                <option>Los Angeles</option>
                <option>Phoenix</option>
            </select>
        </div>
        <div class="form-group">
            <span asp-validation-for="Language"></span>
            <label asp-for="Language"></label>
            <select asp-for="Language">
                <option>C#</option>
                <option>Python</option>
                <option>Java</option>
                <option>English</option>
                <option>Spanish</option>
            </select>
        </div>
        <div class="form-group">
            <span asp-validation-for="Comment"></span>
            <label asp-for="Comment"></label>
            <textarea asp-for="Comment" rows="6"></textarea>
        </div>
        <input type="submit" id="submitbtn">
    </form>
</div>

